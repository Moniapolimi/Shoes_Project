<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Stato della connessione -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEEEEE"
        android:padding="8dp"
        android:text="Stato: Non connesso"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <!-- Dati dei sensori -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/sensor1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Sensore 1: -"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sensor2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Sensore 2: -"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sensor3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Sensore 3: -"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sensor4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Sensore 4: -"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sensor5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Sensore 5: -"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sensor6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Sensore 6: -"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sensor7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Sensore 7: -"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sensor8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Sensore 8: -"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sensor9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Sensore 9: -"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sensor10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Sensore 10: -"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>

